# Flask Configuration
FLASK_ENV=production
SECRET_KEY=your-secret-key-here-change-in-production
PORT=8080

# Database
DATABASE_URL=sqlite:///firewall.db
# For PostgreSQL: DATABASE_URL=postgresql://user:password@localhost/firewall

# Africa's Talking
AT_USERNAME=sandbox
AT_API_KEY=your_africa_talking_api_key_here
AT_SHORTCODE=22334

# Google Gemini / Vertex AI
# Option 1: Use Vertex AI (GCP) - recommended for production
USE_VERTEX_AI=true
GCP_PROJECT_ID=your-gcp-project-id-here
GCP_LOCATION=us-central1

# Option 2: Use Gemini API SDK - for development
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.5-flash

# Feature Flags
ENABLE_BLACKLIST=true
ENABLE_CAMPAIGN_DETECTION=true
ENABLE_BULK_ALERTS=true
ENABLE_SOCIAL_MEDIA=false

# Thresholds
BLACKLIST_SCORE_THRESHOLD=8
URL_BLACKLIST_SCORE_THRESHOLD=9
CAMPAIGN_DETECTION_THRESHOLD=5

# Social Media (Optional)
TWITTER_API_KEY=
TWITTER_API_SECRET=
TWITTER_ACCESS_TOKEN=
TWITTER_ACCESS_TOKEN_SECRET=

# Security
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=10

# Webhook Security
ENABLE_WEBHOOK_SIGNATURE=true
ENABLE_IP_WHITELIST=true
ENABLE_REPLAY_PROTECTION=true
AT_WEBHOOK_SECRET=your_webhook_secret_here
